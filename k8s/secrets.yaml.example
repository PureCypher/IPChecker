apiVersion: v1
kind: Secret
metadata:
  name: ipchecker-secrets
  namespace: ipchecker
type: Opaque
data:
  # ── Required ───────────────────────────────────────────
  # Generate with: echo -n 'value' | base64
  POSTGRES_PASSWORD: "<base64-encoded-password>"
  REDIS_PASSWORD: "<base64-encoded-password>"
  ADMIN_API_KEY: "<base64-encoded-key>"
  DATABASE_URL: "<base64-encoded-url>"
  REDIS_URL: "<base64-encoded-url>"

  # ── Provider API Keys (optional — leave empty to disable) ──
  IPINFO_TOKEN: ""
  IPDATA_KEY: ""
  ABUSEIPDB_KEY: ""
  IPGEOLOCATION_KEY: ""
  SHODAN_KEY: ""
  VIRUSTOTAL_KEY: ""
  ALIENVAULT_OTX_KEY: ""
  GREYNOISE_KEY: ""
  CROWDSEC_KEY: ""
  IPQUALITYSCORE_KEY: ""
  PULSEDIVE_KEY: ""
  IBM_XFORCE_KEY: ""
  VPNAPI_KEY: ""
  PROXYCHECK_KEY: ""
  IPHUB_KEY: ""

  # ── LLM Config (optional) ─────────────────────────────
  LLM_API_KEY: ""
  OLLAMA_API_KEY: ""
